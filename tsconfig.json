{
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "lib": ["es5", "es6", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.tsx"],
  "typeRoots": ["node_modules/@types", "./src/typings.d.ts"]
}
